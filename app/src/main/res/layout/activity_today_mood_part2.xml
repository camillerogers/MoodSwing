<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TodayMoodPart2">

    <TextView
        android:id="@+id/diary_title"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="#8C4EB4A1"
        android:gravity="center"
        android:text="@string/today_s_most_impactful_activity"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/white"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Survey2_NextID"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginBottom="75dp"
        android:background="@drawable/rounded_button"
        android:drawableEnd="@drawable/ic_arrow"
        android:onClick="onClickSurveypage2"
        android:padding="10dp"
        android:radius="3dp"
        android:text="@string/next"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <android.support.constraint.ConstraintLayout
        android:layout_width="399dp"
        android:layout_height="372dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintBottom_toTopOf="@+id/Survey2_NextID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diary_title">


        <RadioButton
            android:id="@+id/Work_SchoolID"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_button"
            android:button="@null"
            android:gravity="center"
            android:text="@string/work_school_today"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/ExericseID"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <RadioButton
            android:id="@+id/ExericseID"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_button"
            android:button="@null"
            android:gravity="center"
            android:text="@string/exercise"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/HobbiesID"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Work_SchoolID" />


        <RadioButton
            android:id="@+id/HobbiesID"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_button"
            android:button="@null"
            android:gravity="center"
            android:text="@string/hobbies_today"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/LeisureTimeID"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ExericseID" />


        <RadioButton
            android:id="@+id/LeisureTimeID"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_button"
            android:button="@null"
            android:gravity="center"
            android:text="@string/leisure_time_today"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/ErrandsID"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/HobbiesID" />


        <RadioButton
            android:id="@+id/ErrandsID"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_button"
            android:button="@null"
            android:gravity="center"
            android:text="@string/errands_today"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/SocialEventID"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LeisureTimeID" />

        <RadioButton
            android:id="@+id/SocialEventID"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_button"
            android:button="@null"
            android:gravity="center"
            android:text="@string/social_event_today"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ErrandsID" />

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
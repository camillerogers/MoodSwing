<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TodayMoodPart1">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="#8C4EB4A1"
        android:gravity="center"
        android:text="@string/survey_title_1"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/white"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.moodswings.MyRadioGroup
        android:id="@+id/MoodRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="1.0">

        <RadioButton
            android:id="@+id/TodayMoodBtnID0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/circle_angry_radio"
            android:button="@android:color/transparent"
            android:textColor="#fff" />

        <RadioButton
            android:id="@+id/TodayMoodBtnID1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/circle_misery_radio"
            android:button="@android:color/transparent"
            android:textColor="#fff" />

        <RadioButton
            android:id="@+id/TodayMoodBtnID2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/circle_sad_radio"
            android:button="@android:color/transparent"
            android:textColor="#fff" />

        <RadioButton
            android:id="@+id/TodayMoodBtnID3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/circle_okay_radio"
            android:button="@android:color/transparent"
            android:textColor="#fff" />

        <RadioButton
            android:id="@+id/TodayMoodBtnID4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/circle_good_radio"
            android:button="@android:color/transparent"
            android:textColor="#fff" />

        <RadioButton
            android:id="@+id/TodayMoodBtnID5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/circle_happy_radio"
            android:button="@android:color/transparent"
            android:textColor="#fff" />

    </com.example.moodswings.MyRadioGroup>

    <Button
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginBottom="75dp"
        android:background="@drawable/rounded_button"
        android:drawableEnd="@drawable/ic_arrow"
        android:onClick="onClickSurveypage1"
        android:padding="10dp"
        android:radius="3dp"
        android:text="@string/next"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>
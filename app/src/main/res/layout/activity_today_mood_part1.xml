<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TodayMoodPart1">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="#8C4EB4A1"
        android:gravity="center"
        android:text="@string/survey_title_1"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/white"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/MoodRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/TodayMoodBtnID0"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/circle_angry"
                android:button="@android:color/transparent"
                android:textColor="#fff"
                app:layout_constraintEnd_toStartOf="@+id/TodayMoodBtnID1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioButton
                android:id="@+id/TodayMoodBtnID1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/circle_misery"
                android:button="@android:color/transparent"
                android:textColor="#fff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioButton
                android:id="@+id/TodayMoodBtnID2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/circle_sad"
                android:button="@android:color/transparent"
                android:textColor="#fff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/TodayMoodBtnID1"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioButton
                android:id="@+id/TodayMoodBtnID3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/circle_okay"
                android:button="@android:color/transparent"
                android:textColor="#fff"
                app:layout_constraintEnd_toStartOf="@+id/TodayMoodBtnID4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <RadioButton
                android:id="@+id/TodayMoodBtnID4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/circle_good"
                android:button="@android:color/transparent"
                android:textColor="#fff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <RadioButton
                android:id="@+id/TodayMoodBtnID5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/circle_happy"
                android:button="@android:color/transparent"
                android:textColor="#fff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/TodayMoodBtnID4"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="34dp"
                android:layout_height="37dp"
                android:layout_marginBottom="13dp"
                android:gravity="center"
                android:text="@string/angry_1"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#4EB4A1"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/TodayMoodBtnID0"
                app:layout_constraintEnd_toEndOf="@+id/TodayMoodBtnID0"
                app:layout_constraintStart_toStartOf="@+id/TodayMoodBtnID0" />

            <TextView
                android:id="@+id/diary_title"
                android:layout_width="24dp"
                android:layout_height="37dp"
                android:layout_marginBottom="13dp"
                android:gravity="center"
                android:text="@string/sad_3"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#4EB4A1"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/TodayMoodBtnID2"
                app:layout_constraintEnd_toEndOf="@+id/TodayMoodBtnID2"
                app:layout_constraintStart_toStartOf="@+id/TodayMoodBtnID2" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="34dp"
                android:layout_height="37dp"
                android:layout_marginBottom="13dp"
                android:gravity="center"
                android:text="@string/misery_2"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#4EB4A1"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/TodayMoodBtnID1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="34dp"
                android:layout_height="37dp"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:text="@string/good_5"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#4EB4A1"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TodayMoodBtnID1" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="34dp"
                android:layout_height="37dp"
                android:gravity="center"
                android:text="@string/happy_6"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#4EB4A1"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="@+id/TodayMoodBtnID5"
                app:layout_constraintStart_toStartOf="@+id/TodayMoodBtnID5"
                app:layout_constraintTop_toTopOf="@+id/textView8" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="34dp"
                android:layout_height="37dp"
                android:gravity="center"
                android:text="@string/okay_4"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#4EB4A1"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="@+id/TodayMoodBtnID3"
                app:layout_constraintStart_toStartOf="@+id/TodayMoodBtnID3"
                app:layout_constraintTop_toTopOf="@+id/textView8" />

        </android.support.constraint.ConstraintLayout>
    </RadioGroup>

    <Button
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginBottom="75dp"
        android:background="@drawable/rounded_button"
        android:drawableEnd="@drawable/ic_arrow"
        android:onClick="onClickSurveypage1"
        android:padding="10dp"
        android:radius="3dp"
        android:text="@string/next"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>